{
  "name": "@kolo/cli",
  "version": "1.0.0",
  "description": "Converts json data into a compatible format for training AI with Kolo.",
  "module": "./src/index.ts",
  "type": "module",
  "scripts": {
    "convert-cli": "bun ./src/index.ts",
    "build": "tsc",
    "package": "bun package:linux && bun package:linux64 && bun package:mac && bun package:mac64 && bun package:win",
    "package:target": "bun build --compile --minify --sourcemap --bytecode --target=$TARGET ./src/index.ts --outfile ./bin/$TARGET_OS/kolo",
    "package:linux": "TARGET=bun-linux-x64 TARGET_OS=linux bun package:target",
    "package:linux64": "TARGET=bun-linux-arm64 TARGET_OS=linux64 bun package:target",
    "package:mac": "TARGET=bun-darwin-x64 TARGET_OS=mac bun package:target",
    "package:mac64": "TARGET=bun-darwin-arm64 TARGET_OS=mac64 bun package:target",
    "package:win": "TARGET=bun-windows-x64 TARGET_OS=win bun package:target",
    "package:win64": "TARGET=bun-windows-arm64 TARGET_OS=win64 bun package:target",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "maebug",
  "license": "Apache-2.0",
  "dependencies": {
    "ajv": "^8.12.0",
    "commander": "^13.1.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bun": "^1.2.2",
    "prettier": "^3.5.0",
    "typescript": "^5.7.3"
  }
}
