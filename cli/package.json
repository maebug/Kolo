{
  "name": "@kolo/cli",
  "version": "1.0.0",
  "description": "Converts json data into a compatible format for training AI with Kolo.",
  "module": "./src/index.ts",
  "type": "module",
  "scripts": {
    "kolo": "deno --allow-env --allow-read --allow-run --allow-sys --allow-write --env-file ./src/index.ts",
    "package": "NODE_ENV=production && deno run package:all",
    "package:all": "deno run package:linux && deno run package:linux64 && deno run package:mac && deno run package:mac64 && deno run package:win",
    "package:target": "deno compile --allow-env --allow-read --allow-run --allow-sys --allow-write --env-file --target $TARGET --include ../dockerfile --include ../supervisord.conf --include ../scripts --include ../torchtune --output ./bin/$TARGET_OS/kolo ./src/index.ts",
    "package:linux": "TARGET=x86_64-unknown-linux-gnu TARGET_OS=linux deno run package:target",
    "package:linux64": "TARGET=aarch64-unknown-linux-gnu TARGET_OS=linux64 deno run package:target",
    "package:mac": "TARGET=x86_64-apple-darwin TARGET_OS=mac deno run package:target",
    "package:mac64": "TARGET=aarch64-apple-darwin TARGET_OS=mac64 deno run package:target",
    "package:win": "TARGET=x86_64-pc-windows-msvc TARGET_OS=win deno run package:target",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "maebug",
  "license": "Apache-2.0",
  "dependencies": {
    "ajv": "^8.12.0",
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "commander": "^13.1.0",
    "inquirer": "^12.4.2",
    "ora": "^8.2.0",
    "terminal-link": "^3.0.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "prettier": "^3.5.0"
  }
}
